<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-inputs-registration",  placeholder: 'Email'%>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-inputs-registration",  placeholder: 'Password'%>
  </div>

  

  <div class="other-links">
    <%= f.submit "Log in",  class: 'login'%>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

