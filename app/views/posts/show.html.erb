<section id="post_info">
  <div class="post_desc">
    <div class="unit">
      <h2><%= @post.title %> by <%= @post.author.name%></h2>
      <h4>Comments:<%= @post.comments_counter%></h4>
      <h4>
        <%= button_to "Like",
        user_post_likes_path(user_id: @current_user.id, post_id: @post.id),
        method: :post, class: "like-button" %> <%= @post.likes_counter %> </h4>
    </div>
    <p class="P_text"><%= @post.text%></p>
  </div>

  <div class="com_on_Post">
  <h3>comments</h3>
    <ul>
      <% @post_comments.each do |comment| %>
        <li><%= comment.author.name %>: <%= comment.text %></li>
      <% end %>
    </ul>
    <%= link_to "Add comment", new_user_post_comment_path(user_id: @current_user.id, post_id: @post.id) %>
  </div>
</section>
