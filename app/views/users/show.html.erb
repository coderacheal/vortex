<section>
    <div class='each-user'>
        <div class='user-image'> <%= @user.photo %></div>
        <div class='user-activity'>
            <h1><%= @user.name %></h1>
            <p>Number of posts: <%= @user.posts_counter %></p>
        </div>
    </div>

    <div class='bio-div'>
        <h2>Bio</h2>
        <div> <%= @user.bio %></div>
    </div>
    <div class='posts-div'>
        <% @recent_posts.each_with_index do |post, index| %>
            <div class='individual-user-post'>
                <h1>Post #<%= index+1 %></h1>
                <p> <%= post.text %></p>
                <p>
                    Comments: <%= post.comments_counter %>
                    Likes: <%= post.likes_counter %>
                </p>
            </div>
            <br>
        <% end %>
    </div>
    <br>
    <button class="see-all-posts">
      <%= link_to "See all posts", user_posts_path(@user) %>
    </button>

</section>
